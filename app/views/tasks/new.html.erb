<% provide(:title, "New Task") %>

<div class="container">
    <h1>タスク新規作成</h1>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f| %>
                <%= render 'shared/error_messages', object: f.object %>
            
                <%= f.label :name, class: "label-form" %>
                <%= f.text_field :name, class: "form-control" %>
                
                <%= f.label :note, class: "label-form" %>
                <%= f.text_area :note, rows: 5, class: "form-control " %>
                
                <%= f.submit "新規登録", class: "btn btn-primary btn-lg btn-form" %>
            <% end %>
        </div>
    </div>
</div>

