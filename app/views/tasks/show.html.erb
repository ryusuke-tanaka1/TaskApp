<% provide(:title, @user.name) %>

<div class="container">
  <h1>タスク詳細</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-bordered table-tasks">
        <tbody>
          <tr>
            <th class="active">ID</th>
            <td><%= @task.id %></td>
          </tr>
          <tr>
            <th class="active">名称</th>
            <td><%= @task.name %></td>
          </tr>
          <tr>
            <th class="active">詳細</th>
            <td><%= text_url_to_link(h(@task.note)).html_safe %></td>
          </tr>  
          <tr>
            <th class="active">作成日</th>
            <td><%= l(@task.created_at, format: :long) %></td>
          </tr>
          <tr>
            <th class="active">更新日</th>
            <td><%= l(@task.updated_at, format: :long) %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "編集", edit_user_task_path(@user, @task), class: "btn btn-success btn-lg" %>
      <%= link_to "削除", user_task_path(@user, @task), method: :delete, class: "btn btn-danger btn-lg", 
      data: { confirm: "「#{ @task.name }」を削除します。よろしいですか。" } %>
    </div>
  </div>
</div>