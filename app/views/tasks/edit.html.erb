<% provide(:title, "Edit Task") %>

<div class="container">
  <h1>タスク編集</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_with(model: @task, local: true, url: user_task_path) do |f| %>
        
        <%= f.label :name, class: "label-form" %>
        <%= f.text_field :name, class: "form-control" %>
        
        <%= f.label :note, class: "label-form" %>
        <%= f.text_area :note, rows: 5, class: "form-control" %>
        
        <%= f.submit "更新", class: "btn btn-primary btn-form" %>
        <%= link_to "キャンセル", user_tasks_path(@user), class: "btn btn-default btn-form" %>
      <% end %>
    </div>
  </div>
</div>