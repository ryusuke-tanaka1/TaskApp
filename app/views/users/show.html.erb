<% provide(:title, @user.name) %>

<div class="container">
  <h1>プロフィール</h1>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-hover table-user">
        <tbody>
          <tr>
            <th class="active"><%= User.human_attribute_name :id %></td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th class="active"><%= User.human_attribute_name :name %></td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th class="active"><%= User.human_attribute_name :email %></td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th class="active"><%= User.human_attribute_name :created_at %></td>
            <td><%= l(@user.created_at, format: :long) %></td>
          </tr>
        </tbody>
      </table>
    </div>    
  </div>
</div>